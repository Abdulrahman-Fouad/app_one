<odoo>

    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <!--            <tree multi_edit="1" delete="0" edit="0" create="0">-->
            <tree class="header_custom" decoration-danger="(is_late)">
                <field name="name"/>
                <field name="postcode"/>
                <field name="owner_id"/>
<!--                <field name="active" invisible="1"/>-->
                <field name="tag_ids" string="Tags" widget="many2many_tags"/>
                <field name="date_availability"/>
                <field name="expected_selling_date"/>
                <field name="is_late" column_invisible="1"/>
                <field name="selling_price"/>
                <field name="garden"/>
                <field name="garden_orientation"/>
                <field name="state"/>
                <field name="garage"/>
                <field name="bedrooms" optional="1"/>
                <field name="living_area" optional="1"/>
            </tree>
        </field>
    </record>

    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <!--            <form delete="0" edit="0" create="0">-->
            <form>
                <sheet>
                    <header>
                        <button name="action_draft" type="object" class="btn-primary" string="SET To Draft"
                                invisible="state == 'draft'"/>
                        <button name="action_pending" type="object" class="btn-secondary" string="Pending"
                                invisible="state != 'draft'"/>
                        <button name="action_sold" type="object" class="btn-success" string="Sold"
                                invisible="state != 'pending'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>

                        <group string="General Info">
                            <field name="is_late"/>
                            <field name="expected_selling_date"/>
                            <field name="active" invisible="1"/>
                            <field name="date_availability" required="1"/>
                            <field name="postcode"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="diff" string="Difference"/>
                            <field name="bedrooms"/>
                            <field name="living_area" required="1"/>
                            <field name="facades"/>

                        </group>

                        <group string="Additional Info">
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                            <field name="tag_ids" string="Tags" widget="many2many_tags"/>
                        </group>
                    </group>

                    <group>
                        <field name="description" required="1"/>
                    </group>

                    <group string="Owner Info">
                        <field name="owner_id" required="1"/>
                        <field name="owner_address"/>
                        <field name="owner_phone"/>
                    </group>
                    <notebook>
                        <page string="Bedrooms">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="area"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="property_view_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="postcode"/>
                <field name="name"/>

                <filter name="is_garden" string="with Garden" domain="[('garden', '=', True)]"/>
                <filter name="is_not_garage" string="without Garage" domain="[('garage', '=', False)]"/>

                <filter name="group_garden" string="Garden" context="{'group_by':'garden'}"/>
            </search>
        </field>
    </record>


    <record id="property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">property</field>
    </record>


    <record id="check_selling_date_cron" model="ir.cron">
        <field name="name">Property: Check selling date</field>
        <field name="model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">model.check_expected_selling_date()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>
